<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WriteActivity"
        android:orientation="vertical">

    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:fontFamily="@font/ns_extrabold"
                android:textAlignment="center"
                android:text="Write"
                android:textSize="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="#000"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/check"
                android:onClick="submitPost"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"/>
    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:background="#fef3e6">
            <EditText
                    android:id="@+id/btitle"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="4"
                    android:fontFamily="@font/ns_light"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:hint="책제목을 입력해주세요."
                    android:background="#00ff0000"
                    android:textColorHint="#404040"
            />
            <ImageView
                    android:onClick="textSearch"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/search"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
            />
            <ImageView
                    android:onClick="OCRBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/addpic"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
            />

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:background="#fef3e6">
            <EditText
                    android:id="@+id/bauthor"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="4"
                    android:fontFamily="@font/ns_light"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:hint="저자를 입력해주세요."
                    android:background="#00ff0000"
                    android:textColorHint="#404040"
            />
            <ImageView
                    android:onClick="textSearch"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/search"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
            />
            <ImageView
                    android:onClick="OCRBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/addpic"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:background="#fef3e6"
        >
            <EditText
                    android:id="@+id/bpublish"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="4"
                    android:fontFamily="@font/ns_light"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:hint="출판사를 입력해주세요."
                    android:paddingLeft="10dp"
                    android:background="#00ff0000"
                    android:textColorHint="#404040"
            />
            <ImageView
                    android:onClick="textSearch"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/search"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
            />
            <ImageView
                    android:onClick="OCRBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/addpic"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
            />
        </LinearLayout>
    </LinearLayout>
    <ImageView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pinkline"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:fillViewport="true">
        <LinearLayout
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="vertical">
            <ProgressBar
                    android:id="@+id/pgb1"
                    android:layout_width="match_parent"
                    android:indeterminate="true"
                    android:visibility="gone"
                    android:indeterminateDuration="1000"
                    android:layout_height="0dp"
                    android:layout_weight="3"/>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/writesearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/myUploadPic"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="20dp"
                        android:onClick="PicBtn"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/background"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
                    <DatePicker
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:datePickerMode="spinner"
                            android:calendarViewShown="false"
                            android:id="@+id/datePick"></DatePicker>
                </LinearLayout>

            </LinearLayout>
            <EditText
                    android:id="@+id/input_content"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:fontFamily="@font/ns_light"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="내용을 입력해주세요."
                    android:gravity="top"
                    android:padding="10dp"
                    android:textColorHint="#404040"
                    android:layout_marginBottom="10dp"
                    android:background="#00ff0000"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>