<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity"
        android:orientation="vertical"
        android:background="@drawable/background">

    <TextView
            android:fontFamily="@font/ns_extrabold"
            android:textAlignment="center"
            android:text="Sign Up"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"/>
    <Space android:layout_width="match_parent" android:layout_height="0dp"
           android:layout_weight="2"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="5"
                  android:orientation="vertical"
                  android:gravity="center">

        <EditText
                android:fontFamily="@font/ns_light"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="E-Mail"
                android:ems="10"
                android:background="@drawable/login_input_back"
                android:paddingLeft="15dp"
                android:textColorHint="#3b3838"
                android:textSize="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:inputType="textEmailAddress"
                android:id="@+id/input_email"/>
        <EditText
                android:layout_marginBottom="8dp"
                android:textColorHint="#3b3838"
                android:textSize="24dp"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:ems="10"
                android:paddingLeft="15dp"
                android:fontFamily="@font/ns_light"
                android:hint="password"
                android:background="@drawable/login_input_back"
                android:inputType="textPassword"
                android:id="@+id/input_pass"/>
        <EditText
                android:layout_marginBottom="8dp"
                android:textColorHint="#3b3838"
                android:textSize="24dp"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:ems="10"
                android:paddingLeft="15dp"
                android:fontFamily="@font/ns_light"
                android:hint="User-name"
                android:background="@drawable/login_input_back"
                android:inputType="textPersonName"
                android:id="@+id/input_name"/>

       <android.support.v7.widget.RecyclerView android:layout_width="350dp"
                                               android:layout_height="50dp"
                                               android:id="@+id/catg_list"></android.support.v7.widget.RecyclerView>

        <ImageView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"/>
        <Button
                android:id="@+id/enrol_btn"

                android:fontFamily="@font/ns_regular"
                android:textColor="#3b3838"
                android:textSize="24dp"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:layout_width="350dp"
                android:background="@drawable/login_button_back"
                android:layout_height="50dp"
                android:onClick="clickEnroll"/>
    </LinearLayout>
    <Space android:layout_width="match_parent" android:layout_height="0dp"
           android:layout_weight="2"/>
</LinearLayout>